<div class="container">
  <h1><%= @flat.name %></h1>
  <p><%= @flat.description %></p>
  <p><%= @flat.address %></p>
  <%= @flat.price_per_night %>
  <%= @flat.number_of_guests %>
  <%= link_to 'Add a review', new_flat_review_path(@flat) %>
  <br>
  <%= link_to "Edit", edit_flat_path(@flat), class: 'btn btn-primary' %>

  <% @flat.reviews.each do |review| %>
    <p><%= review.content %></p>
    <p><%= review.rating %></p>
  <% end %>
</div>
